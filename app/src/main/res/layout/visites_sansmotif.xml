<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/patientSansmotif"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="22dp"
        android:text="patient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateSansMotif"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="22dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/motifSansMotif"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/motifSansMotif"

        android:layout_width="111dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#33AEB6"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Motif ..."
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/patientSansmotif"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveSansMotif"
        android:layout_width="84dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="Save"
        app:layout_constraintStart_toEndOf="@+id/dateSansMotif"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>